@model List<ProductVM>



<h2>Product Index</h2>
<a class="btn btn-primary" asp-action="Create">New Product</a>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Sl</th>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
          
        </tr>
    </thead>
    <tbody>
        @{
            int slNo = 0;
        }
        @foreach (var product in Model)
        {
            <tr>
                <td>@(++slNo)</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td> <a asp-action="Edit" asp-route-id="@product.Id">Edit</a> | <a asp-action="Details" asp-route-id="@product.Id">View</a></td>

                   
                    
                   

            </tr>
        }
    </tbody>

</table>