@using SampleEcommerce.Models.SubCategory;

@model SubCategoryVM

<h4>SubCategory Create</h4>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <h2>Select Category</h2>
        <label asp-for="CategoryId">Category</label>
        <select type="text" class="form-control" asp-items="@Model.CategoryList" asp-for="CategoryId">
            <option value="">Select Sub-Category...</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>



   
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Code">Code</label>
        <input type="text" class="form-control" asp-for="Code">
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input type="text" class="form-control" asp-for="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>